library ieee;
use ieee.std_logic_1164.all;
use ieee.numeric_std.all;
use work.edc_mux_pkg.all;



entity bus_multiplexer is
        generic (bus_width : positive := 8; sel_width : positive := 2);
type mult_buffer_t					is array (31 downto 0) 	of integer range -16777216 to 16777215; -- 25 bits wide
        port (  i : in mult_buffer_t;
                sel : in std_logic_vector(4 - 1 downto 0);
                o : out std_logic_vector(16 - 1 downto 0)
);
end bus_multiplexer;

architecture dataflow of bus_multiplexer is
begin
        o <= i(to_integer(unsigned(sel)));
end dataflow;